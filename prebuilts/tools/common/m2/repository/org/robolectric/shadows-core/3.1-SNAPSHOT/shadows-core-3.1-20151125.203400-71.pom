              <outputDirectory>dist</outputDirectory>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <dependencies>
        <dependency>
          <groupId>org.robolectric</groupId>
          <artifactId>android-all</artifactId>
          <version>4.3_r2-robolectric-0</version>
        </dependency>
      </dependencies>
      <properties>
        <api>18</api>
