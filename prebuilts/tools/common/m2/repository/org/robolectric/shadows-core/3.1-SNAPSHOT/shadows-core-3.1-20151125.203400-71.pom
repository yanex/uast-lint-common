            <configuration>
              <classifier>${api}</classifier>
              <outputDirectory>dist</outputDirectory>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <dependencies>
        <dependency>
          <groupId>org.robolectric</groupId>
          <artifactId>android-all</artifactId>
          <version>4.2.2_r1.2-robolectric-0</version>
        </dependency>
      </dependencies>
      <properties>
